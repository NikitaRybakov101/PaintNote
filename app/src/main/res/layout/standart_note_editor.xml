<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/note"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fontSizeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/fontSizeEdit"
        app:layout_constraintEnd_toStartOf="@+id/fontSizeEdit"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dropSizeFont"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:alpha="1"
        android:rotation="90"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/fontSizeEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/fontSizeEdit"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="18"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/dropSizeFont"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fontSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/fontEdit"
        app:layout_constraintEnd_toStartOf="@+id/fontEdit"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView186"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="font"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dropFonts"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:alpha="1"
        android:rotation="90"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/fontEdit"
        app:layout_constraintEnd_toStartOf="@+id/fontSizeSelect"
        app:layout_constraintTop_toTopOf="@+id/fontEdit" />

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/fontEdit"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="textAutoComplete"
        android:text="Classic"
        android:textSize="14sp"
        android:theme="@style/Widget.AppCompat.SearchView"
        app:layout_constraintEnd_toStartOf="@+id/dropFonts"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>